<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:weightSum="3"
    android:id="@+id/single_row_layout"
    >
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="118dp"
        android:gravity="center"
        android:layout_weight="1">
        
        <ImageView
            android:layout_width="94dp"
            android:layout_height="110dp"
            android:id="@+id/single_row_imageview"
            android:src="@drawable/dominos_logo"/>
        
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:weightSum="3"
        android:layout_weight="1.5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >

        <TextView
            android:text="domino's"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.9"
            android:textColor="#000402"
            android:textSize="28dp"
            android:fontFamily="monospace"
            android:id="@+id/single_row_textheader"/>

        <TextView
            android:text="8000708986"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:id="@+id/single_row_textaddress"
            android:textSize="18dp"
            android:layout_weight="2"
            />




    </LinearLayout>

</LinearLayout>